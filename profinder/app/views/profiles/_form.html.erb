<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="well">
            <%= form_for @profile, url: user_profile_path, html: { multipart: true } do |f| %>
                <div class="form-group">
                    <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
                </div>
                <div class="form-group">
                    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
                </div>
                <div class="form-group">
                    <%= f.file_field :avatar, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.select :job_title, ['Developer', 'Entrepreneur','Investor'], {}, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.text_field :company_name, class: 'form-control', placeholder: 'Company name' %>
                </div>
                <div class="form-group">
                    <%= f.text_field :url, class: 'form-control', placeholder: "A link to your company's website or facebook page" %>
                </div>
                <div class="form-group">
                    <%= f.text_field :contact_email, class: 'form-control', placeholder: 'Your email address' %>
                </div>
                <div class="form-group">
                    <%= f.text_area :description, class: 'form-control', placeholder: 'A short description of yourself' %>
                </div>
                <div class="form-group">
                    <%= f.submit "Update profile", class: "btn btn-success" %>
                </div>
                
            <% end %>
        </div>
    </div>
</div>