
    <div class="container">
        
                <%= form_for @profile, url: user_profile_path, html: { multipart: true } do |f| %>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <%= f.label :first_name, "Your first name", class:"bigger" %>
                            <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
                        </div>
                        <div class="form-group col-md-6">
                            <%= f.label :last_name, "Your last name", class:"bigger" %>
                            <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <%= f.label :avatar, "Please upload a professional portrait that clearly shows your face", class:"bigger" %>
                            <%= f.file_field :avatar, class: 'form-control btn btn-primary' %>
                           
                        </div>
                        
                        <div class="form-group col-md-6">
                            <%= f.label :field_id, "Select the industry ", class:"bigger" %>
                            <%= f.collection_select :field_id, Field.all, :id, :name, {prompt: 'choose a category'}, class: 'form-control' %>
                        </div>
                        
                    </div>
                
                <hr class="hr-edit">
                    
                    
                    
                    
                        <div class="row">
                            <div class="form-group col-md-6">
                                <%= f.label :job_title, "Add a professional title that describes the work you do", class:"bigger" %>
                                <%= f.text_field :job_title, class: 'form-control', placeholder: "EXAMPLE: Electrical Engineer", placeholder: 'EXAMPLE: Web Developer' %>
                            </div>
                        
                            <div class="form-group col-md-6">
                                <%= f.label :company_name, "The company you are working at.", class:"bigger" %>
                                <%= f.text_field :company_name, class: 'form-control', placeholder: 'EXAMPLE: AT&T' %>
                            </div>
                        </div>
                    
                    <div class="form-group">
                        <%= f.label :description, "Write a brief professional overview", class:"bigger" %>
                        <%= f.text_area :description, class: 'form-control', placeholder: 'A short description of yourself' %>
                    </div>
                    <div class="form-group">
                        <%= f.submit "Update profile", class: "btn btn-primary" %>
                    </div>
                    
                <% end %>
            
        
    </div>
