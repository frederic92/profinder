<div class="text-center index-header">
    <h2><%= @user.profile.first_name.capitalize %> <%= @user.profile.last_name.capitalize %></h2>
    <% if @user == current_user %>
        <%= link_to "Edit your profile", edit_user_profile_path(current_user), class: 'btn btn-primary pull-right' %>
    <% end %>
</div>

<div class="show-page">
    <div class="container">
        <div class="col-md-3 col-sm-4 col-xs-12 text-center">
            <% if @user.profile.avatar_file_name %>
                <div class="">
                  <div>
                      <% if @user.profile.avatar_file_name %>
                        <%= image_tag @user.profile.avatar.url(:medium), class: 'img-responsive' %>
                      <% end %>
                    
                  </div>
                </div>
            <% end %>
            <div class="social">
                <a href='#'><i class="fa fa-facebook-square fa-4x"></i></a>
                <a href='#'><i class="fa fa-twitter-square fa-4x"></i></a>
                <a href='#'><i class="fa fa-google-plus-square fa-4x"></i></a>
            </div>
        </div>
        <div class="col-md-9 col-sm-8">
            <div class="main-content">
                <div id="personal-info">
    			    <div class="timeline-badge primary"></div>
    			 	<div class="timeline-panel">
    					   <h2>Personal Info</h2>
    					   <div class="hr-left"></div>
    
    					   <div class="btn-group">
    					        <button type="button" disabled class="btn btn-primary">Name</button>
    		  	                <button type="button" disabled class="btn btn-default"><%= @user.profile.first_name.capitalize %> <%= @user.profile.last_name.capitalize %></button>
    						</div>
    						<div class="btn-group">
    							<button type="button" disabled class="btn btn-primary">Job title</button>
    							<button type="button" disabled class="btn btn-default"><%= @user.profile.job_title %></button>
    						</div>
    						<div class="btn-group">
    							<button type="button" disabled class="btn btn-primary">Company</button>
    							<button type="button" disabled class="btn btn-default"><%= @user.profile.company_name %></button>
    						</div>
    						<div class="btn-group">
    							<button type="button" disabled class="btn btn-primary">City</button>
    							<button type="button" disabled class="btn btn-default">222 St. Newmon UK</button>
    						</div>
    						<div class="btn-group">
    							<button type="button" disabled class="btn btn-primary">State</button>
    							<button type="button" disabled class="btn btn-default">023-2314 1231</button>
    						</div>
    						<div class="btn-group">
    							<button type="button" disabled class="btn btn-primary">Description</button>
    							<button type="button" disabled class="btn btn-default"><%= @user.profile.description %></button>
    						</div>
    				</div>
    			</div>
    			
    			
    					        <!-- end:profile -->
    
            </div>
        </div>
    </div>
</div>






